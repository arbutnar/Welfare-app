{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "./src/ts",
		"sourceMap": true,
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./src/ts/types", "./node_modules/@types"],
	},
	"include": [
		"src/ts/**/*.ts",
		"src/ts/**/*.d.ts",
	],
	"watchOptions": {
		"watchFile": "dynamicPriorityPolling",
		"watchDirectory": "dynamicPriorityPolling"
	}
}